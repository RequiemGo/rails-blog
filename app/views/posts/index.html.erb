<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<%= link_to "New post", new_post_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title (ES)</th>
      <th>Title (EN)</th>
      <th>Body (ES)</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title_es %></td>
        <td><%= post.title_en %></td>
        <td><%= post.body_es %></td>
        <td>
          <%= link_to "Show", post, class: 'btn btn-success' %>
          <%= link_to "Edit", edit_post_path(post), class: 'btn btn-primary' %>
          <%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

